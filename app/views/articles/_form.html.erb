<div class="container">

<div class="row justify-content-center">
<div class="col-10">

  <%=render 'shared/errors'%>
  <%= form_with(model: @article, class: "shadow p-3 mb-3 mb-3 bg-info rounded", local: true) do |f|%>

  <div class="form-group row">
    <%=f.label :title, class: "col-2 col-form-label"%>
    <div class="col-10">
      <%=f.text_field :title, class: "form-control shadow rounded", placeholder: "Sample title" %>
    </div>
  </div>
  <div class="form-group row">

    <%=f.label :description, class: "col-2 col-form-label" %>
    <div class="col-10">
    <%=f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Sample descripton here" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <%=f.submit class: "btn btn-outline-light btn-lg col-2 "  %>
  </div>

  <%end%>
</div>
<div class="mb-3">
<%= link_to '[Cancel and return to article listing]', articles_path%>
</div>
</div>
</div>
